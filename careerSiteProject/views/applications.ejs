<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Applications - Career Portal</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css" integrity="sha512-F7WyTLiiiPqvu2pGumDR15med0MDkUIo5VTVyyfECR5DZmCnDhti9q5VID02ItWjq6fvDfMaBaDl2J3WdL1uxA==" crossorigin="anonymous" />
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .application-table {
            width: 100%;
            margin-bottom: 30px;
        }

        .application-card {
            border: 1px solid #e5e5e5;
            border-radius: 5px;
            margin: 20px 0;
            padding: 20px;
            transition: transform 0.3s ease-in-out;
        }

        .application-card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Career Portal</a>
        <!-- Add your navigation items here -->
    </div>
</nav>

<!-- Job Applications Table -->
<section id="jobApplications" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Job Applications</h2>
        <table class="table table-striped application-table">
            <thead>
                <tr>
                    <th scope="col">Job Title</th>
                    <th scope="col">Company</th>
                    <th scope="col">Description</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Location</th>
                    <th scope="col">Requirements</th>
                    <th scope="col">Applied Date</th>
                    <th scope="col">Applicant</th>
                </tr>
            </thead>
            <tbody>
                <% applications.forEach(application => { %>
                    <tr>
                        <td><%= application.jobPosting.title %></td>
                        <td><%= application.jobPosting.company %></td>
                        <td><%= application.jobPosting.description %></td>
                        <td>$<%= application.jobPosting.salary %></td>
                        <td><%= application.jobPosting.location %></td>
                        <td>
                            <ul>
                                <% application.jobPosting.requirements.forEach(requirement => { %>
                                    <li><%= requirement %></li>
                                <% }); %>
                            </ul>
                        </td>
                        <td><%= application.applicationDate.toDateString() %></td>
                        <td><%= application.user.name %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</section>

<!-- Bootstrap and JavaScript scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.min.js" integrity="sha384-X6n538b74zvtbo8qeDkKUnpR5Xv/KB5mld5vXa5adcu0t5SRVCc45z3bsU9q5aF6" crossorigin="anonymous"></script>
</body>
</html>
